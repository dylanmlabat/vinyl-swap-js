<center><h1><%= @artist %></h1></center>

<p><h2>Albums:</h2>
<p><div class="margin"><% @artist_albums.each do |album| %>
  <h3><%= link_to album.title, album_path(album) %></h3>
  <small>Released: <%= album.release_year %></small><br><br>
<% end %></div>

<div id="albumResult" class="margin">
  <h3 id="albumTitle"></h3>
  <small id="albumYear"></small>
</div>

<button id='new-album-form-btn'>Add New Album</button>
<div id="new-album-form"></div>
